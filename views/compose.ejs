<%- include("partials/header.ejs") %>

<div class="container">
  <h1>Compose</h1>
  <form method="POST" class="publishing" action="/compose">
    <div class="form-group">
      <label for="title">Title</label>
      <input
        class="form-control"
        type="text"
        id="title"
        name="postTitle"
        placeholder="Title"
      />
    </div>
    <div class="form-group">
      <label for="postContent">Post</label>
      <textarea
        class="form-control"
        rows="5"
        type="text"
        id="postContent"
        name="postContent"
        placeholder="Write here..."
      ></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
